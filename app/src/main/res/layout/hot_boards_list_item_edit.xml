<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/black"
    android:baselineAligned="false"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingLeft="20sp"
    android:paddingTop="8sp"
    android:paddingRight="10sp"
    android:paddingBottom="8sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_hot_boards_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9sp"
            android:text="@string/board_list_title_default"
            android:textColor="?attr/paleGrey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textView_hot_boards_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/board_list_subtitle_default"
            android:textColor="?attr/blueGrey"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/hot_boards_online_imageButton_unfav"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="10sp"
            android:scaleType="centerInside"
            android:tint="@drawable/home_botton_item_color_selector"
            app:srcCompat="@drawable/un_fav" />

        <Space
            android:layout_width="5sp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/hot_boards_online_imageButton_drag"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="10sp"
            android:scaleType="fitCenter"
            android:tint="@drawable/home_botton_item_color_selector"
            app:srcCompat="@drawable/ic_dehaze_black_24dp" />

    </LinearLayout>
</LinearLayout>