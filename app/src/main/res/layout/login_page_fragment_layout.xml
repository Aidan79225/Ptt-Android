<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="40sp"
            android:paddingEnd="40sp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="80sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_page_title"
                android:textColor="?attr/paleGrey"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登入"
                    android:textColor="?attr/paleGrey"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:text="｜"
                    android:textColor="?attr/slateGrey"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="註冊"
                    android:textColor="?attr/slateGrey"
                    android:textSize="16sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/login_page_editTextText_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:hint="@string/login_page_user_id"
                    android:inputType="textVisiblePassword"
                    android:textColor="?attr/paleGrey"
                    android:textColorHint="?attr/slateGrey" />
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/login_page_editTextText_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    android:ems="10"
                    android:hint="@string/login_page_password"
                    android:inputType="textPassword"
                    android:textColor="?attr/paleGrey"
                    android:textColorHint="?attr/slateGrey" />

                <ImageButton
                    android:id="@+id/login_page_imageButton_showpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:padding="10sp"
                    app:srcCompat="@drawable/ic_baseline_visibility_24" />
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40sp" />

            <Button
                android:id="@+id/login_page_button"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:text="登入"
                android:textColor="@android:color/white"
                android:textColorHint="@color/article_header_light"
                android:textSize="14sp"
                app:cornerRadius="50sp"
                app:rippleColor="@color/black_light" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <TextView
                android:id="@+id/login_page_textView_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="忘記密碼？"
                android:textAlignment="center"
                android:textColor="@color/slateGrey"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>