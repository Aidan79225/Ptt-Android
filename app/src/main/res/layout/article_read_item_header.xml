<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/article_list_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:background="?attr/article_header"
        android:orientation="horizontal"
        android:paddingStart="10sp"
        android:paddingTop="10sp"
        android:paddingEnd="15sp"
        android:paddingBottom="10sp">


        <ImageButton
            android:id="@+id/article_read_item_header_imageView_back"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginEnd="5sp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_button"
            android:tint="?attr/paleGrey"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/article_read_item_header_textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:layout_weight="1"
                android:lineSpacingExtra="28sp"
                android:lineSpacingMultiplier="0"
                android:text="廚具龍頭櫻花也回台！台商回台本月衝破6000億"
                android:textColor="?attr/paleGrey"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/article_read_item_header_imageButton_board"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/botton_background"
                    android:clickable="false"
                    android:padding="2sp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_component_8" />

                <Space
                    android:layout_width="5sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article_read_item_header_textView_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gossiping / 新聞"
                    android:textColor="?attr/blueGrey" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/article_read_item_header_imagebutton_auth"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/botton_background"
                    android:clickable="false"
                    android:padding="2sp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/component_10_3" />

                <Space
                    android:layout_width="5sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article_read_item_header_textView_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waitaha（哈囉哈囉）"
                    android:textColor="?attr/blueGrey" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5sp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/article_read_item_header_imageButton_time"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/botton_background"
                    android:clickable="false"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/clock" />

                <Space
                    android:layout_width="5sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article_read_item_header_textView_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-09-04  /  21:27:05"
                    android:textColor="?attr/blueGrey" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>